service nullmailer-smtpd
{
    disable     = {% if nullmailer_smtpd %} no {% else %} yes {% endif %}

    bind        = {{ nullmailer_smtpd_host }}
    port        = {{ nullmailer_smtpd_port }}
    socket_type = stream
    protocol    = tcp
    wait        = no
    user        = mail
    server      = /usr/sbin/sendmail 
    server_args = -bs
    type        = unlisted
    log_type    = SYSLOG mail info
    log_on_failure = ATTEMPT
}
